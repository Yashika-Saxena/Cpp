#include<iostream>
#include<string>
using namespace std;
int main(){
    string y , x;
    cout << "Enter first name :";
    cin >> x;
    cout<< "Enter last name :";
    cin>>y;
     cout << "hello "<< x <<" "<< y << endl;
     cout<< "completed";
}

//alternative

#include<iostream>
#include<string>
using namespace std;
int main(){
    string y , x;
    cout << "Enter first name :";
    cin >> x;
    cout<< "Enter last name :";
    cin>>y;
     cout << "hello "<< x +" "+ y << endl;
     cout<< "completed";
}

//alternative

#include<iostream>
#include<string>
using namespace std;
int main(){
    string y , x;
    cout << "Enter first name : ";
    cin >> x;
    cout<< "Enter last name : ";
    cin>>y;
     cout << "hello "<<  x.append(y) << endl;
     cout<< "completed";
}

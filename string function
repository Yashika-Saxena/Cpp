#include<iostream>
#include<string>
using namespace std;
int main(){
    string y , x;
    cout << "Enter first name :";
    cin >> x;
    cout<< "Enter last name :";
    cin>>y;
    string z =x +" "+ y      //concatenate
     cout << "hello "<< z << endl;
      cout<< z.length() << endl;
     cout<< "completed";
     
}

//alternative

#include<iostream>
#include<string>
using namespace std;
int main(){
    string y , x;
    cout << "Enter first name : ";
    cin >> x;
    cout<< "Enter last name : ";
    cin>>y;
    string z=   x.append(y);          //concatenate
     cout << "hello "<< z << endl;
      cout<< z.size() << endl;    //length of the string
     cout<< "completed";
}
